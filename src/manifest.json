{
  "manifest_version": 2,
  "name": "HyperChat by LiveTL",
  "homepage_url": "https://livetl.app/en/hyperchat/",
  "description": "YouTube chat, but it's fast and sleek!",
  "version": "42.0.69",
  "content_security_policy": "script-src 'self' https://www.youtube.com 'unsafe-eval'; object-src 'self'",
  "permissions": [
  ],
  "icons": {
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "all_frames": true,
      "js": [
        "chat-interceptor.bundle.js",
        "chat-injector.bundle.js"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "js": [
        "hyperchat.bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["chat-background.bundle.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "48": "assets/logo-48.png",
      "128": "assets/logo-128.png"
    }
  },
  "web_accessible_resources": [
    "*"
  ]
}
